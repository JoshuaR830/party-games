        </div> *@
    @* </div> *@

    <div id="startGame" class="start-fab"><span class="icons">play_arrow</span></div>
    <div style="background-color: red; height: 54px; position: fixed; top: 0; left: 0; width: 100%; z-index: 100;">
        <div class="letter-fab"><span class="material-icons" style="line-height: 50px">edit</span><span id="letter"></span></div>
