    ViewData["Title"] = "Home page";
}
@* <button id="startButton">Start</button> *@
<input type="hidden" id="userInput"/>
<h1>Thoughts and Crosses</h1>
<div id="container" class="container hidden">
    <input type="hidden" id="messageInput"/>
    <input type="hidden" id="sendButton" value="Calculate" />



    @* <div class="game-context-container"> *@
