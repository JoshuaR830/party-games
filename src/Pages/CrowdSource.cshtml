@page
@model CrowdSourceModel
@{
    ViewData["Title"] = "Crowd Source";
}

@{
    Layout = "_MenuLayout";
}

<div>
    <div>
        <div>Crowd Source</div>
        
        <div class="js-word-container">
            <div>Hello</div>
            <div>Hello</div>
            <div>Hello</div>
            <div>Hello</div>
            <div>Hello</div>
        </div>
        
        <div class="definition-container">
            <div class="js-word">Word</div>

            <input type="hidden" class="js-original-word-status"/>
            <div>Is this a word</div>
            <div style="display: inline-block;">
                <div class="icon-button --tick js-tick" style="display: inline-block;"><span>check</span></div>
                <div class="icon-button --cross js-cross" style="display: inline-block;"><span>close</span></div>
            </div>

            <div class="js-word">Please enter the definition for this word</div>
            <div>
                <label for="animal">Animal</label>
                <input type="radio" id="animal" name="word-category" value="1">
                <label for="plant">Plant</label>
                <input type="radio" id="plant" name="word-category" value="3">
                <label for="vehicle">Vehicle</label>
                <input type="radio" id="vehicle" name="word-category" value="2">
                <label for="vehicle">Object</label>
                <input type="radio" id="object" name="word-category" value="4">
                <label for="none">None</label>
                <input type="radio" id="none" name="word-category" value="0" checked>
            </div>
            <textarea class="definition js-definition"></textarea>
            <div class="button js-definition-update-button">Confirm definition</div>

        </div>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/crowd-source.js"></script>