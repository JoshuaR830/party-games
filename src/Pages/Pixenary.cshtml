@page
@model Chat.Pages.Pixenary

@{
    ViewData["Title"] = "Pixenary";
}

<div class="top-bar-container">
    <div class="top-bar">
        <div class="title-container">
            <a href="/" class="app-page-icon"><span class="material-icons" style="margin-right: 4px; margin-left: 4px;">apps</span></a>
            <div class="pixenary-title">Pixenary</div>
        </div>
        <div class="pixenary-score"><span class="material-icons" style="margin-right: 4px; margin-left: 4px;">emoji_events</span><span id="score"></span></div>

    </div>
</div>

<div class="content-container">
    <div class="js-logged-in-container">
        <div class="extra-info">Logged in users</div>
        <div class="js-logged-in-items-container"></div>
    </div>
    <div class="pixenary-action-button js-reset-button">Start</div>
    <div id="view-score-option" class="button hidden">View scores</div>

    <div class="pixenary-action-button js-score-test hidden">Complete</div>
    <div class="word-choice js-word-choice"></div>

    @* <div class="title"></div> *@
    <div class="top-score-fab js-score-fab fab hidden"></div>
    <div class="timer-fab hidden"></div>


    <div class="js-score-user-selector"></div>

    <div class="pixel-canvas-container js-pixel-canvas-container">
        <canvas id="pixel-canvas" width="300" height="300" class="pixel-canvas"></canvas>
    </div>

    <div class="color-container js-color-container"></div>


    <div class="tool-bar js-tool-bar hidden">
        <div class="color fill-button js-fill-button"><span class="">filter_hdr</span></div>
    </div>

</div>


<div class="popup-modal js-login-modal">
    @await Html.PartialAsync("LoginPopup")
</div>

<div class="popup-modal popup-hidden js-timer-modal">
    @await Html.PartialAsync("TimerPopup")
</div>

<div class="popup-modal popup-hidden js-scores-modal">
    @await Html.PartialAsync("ScoresPopup")
</div>

<div class="popup-modal popup-hidden js-scores-breakdown-modal">
    @await Html.PartialAsync("ScoresBreakDownPopup")
</div>

<div class="popup-modal popup-hidden js-times-up">
    @await Html.PartialAsync("GameOver");
</div>

<div class="popup-modal popup-hidden js-color-modal">
    @await Html.PartialAsync("ColorPopup");
</div>

<script src="~/js/pixenary.js"></script>

